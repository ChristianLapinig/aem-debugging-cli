    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Jest Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "runtimeArgs": ["--inspect-brk", "${workspaceRoot}/node_modules/.bin/jest", "--runInBand", "--coverage", "false"],
            "args": [
                "${workspaceFolder}/__tests__/**/*.spec.ts"
            ],
            "console": "integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Main Config Loader Tests",
            "program": "${workspaceFolder}/src/main.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "args": [
                "assets",
                "create:content-fragment",
                "cfm/pat", 
                "-i",
                "{\"properties\": {\"cq:model\": \"/conf/pat/settings/dam/cfm/models/person\",\"title\": \"Test\",\"description\": \"Test CFM\",\"elements\": {\"firstName\": {\"value\": \"The value of the first name\",\":type\": \"String\"}}}}"
            ],
            "console": "integratedTerminal",
        }
    ]
}